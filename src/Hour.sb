SB_Workaround()
Init()

' initialize caption shapes
Shapes_Init_Caption()
iMax = Array.GetItemCount(shape)
Shapes_Add()

' initialize clock shapes
Shapes_Init_Clock()
iMax = Array.GetItemCount(shape)
Shapes_Add()

' rotate hands
cx = gw / 2 - shX
cy = gh / 2 - shY
While "True"
  angle = Clock.Second / 60 * 360
  iMin = 4
  iMax = 4
  Shapes_Rotate()
  angle = (Clock.Minute / 60 + Clock.Second / 3600) * 360
  iMin = 3
  iMax = 3
  Shapes_Rotate()
  angle = (Clock.Hour / 12 + Clock.Minute / 720 + Clock.Second / 43200) * 360
  iMin = 2
  iMax = 2
  Shapes_Rotate()
  Program.Delay(500)
EndWhile

Sub Init
