      EndIf
      shape[i + 2] = "func=tri;x="+x+";y="+y+";x1="+_x1+";y1=0;x2=0;y2="+_y2+";x3="+_x3+";y3="+_y3+";pw=0;bc="+shp["bc"]+";angle="+angle+";name="+shp["name"]+";"
      x = _x[1]
      y = _y[1] + shp["pw"] / 2
      _width = _x[2] - _x[1]
      _height = 0
      _x1 = 0
      _y1 = 0
      _x2 = _width
