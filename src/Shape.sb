      shape[i + 1] = "func=rect;x="+x+";y="+y+";width="+_width+";height="+_height+";pw=0;bc="+shp["bc"]+";angle="+angle+";name="+shp["name"]+";"
      _width = _y[5] - _y[1]
      _height = _x[1] - _x[6]
      x = (_x[2] + _x[3]) / 2 - _width / 2
      y = (_y[2] + _y[4]) / 2 - _height / 2
      _x1 = _width / 2
      _y2 = _height
      _x3 = _width
      _y3 = _height
      angle = 90
      If shp["angle"] <> 0 Then
